<div class="main">

  <img src="/assets/img/burger.png" alt="tasty burger" max-width="250px" align="center">

  <div class="container">
    <h1>Eat! Da! Burger!</h1>

    <ul id="notdevoured">
      <h3>Ready to eat:</h3>
      {{#each burgers}}
      {{#unless devoured}}
      <li>
        <p> {{burger_name}}
          <button class="devour-burger btn btn-secondary" data-id="{{this.id}}"
            data-eaten="true">Devour it!</button>
        </p>
      </li>
      {{/unless}}
      {{/each}}
    </ul>

    <ul id="devoured">
      <h3>Already devoured:</h3>
      <button id="clearTable" class="btn btn-secondary">Clear the scraps!</button>
      {{#each burgers}}
      {{#if devoured}}
      <li>
        <p>{{burger_name}}</p>
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <h3>Place your order:</h3>

  <form class="create-form">

    <div class="form-group">
      <input type="text" id="burgerSubmit" name="burger_name">
    </div>

    <button type="submit">Order up!</button>
  </form>
</div>